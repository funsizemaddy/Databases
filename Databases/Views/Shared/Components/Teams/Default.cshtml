

@model IEnumerable<Team>

<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-TeamId="" asp-route-TeamName=0 class="btn btn-outline-secondary">Home</a><br />
    @foreach (Team t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-TeamId="@t.TeamID" asp-route-TeamName="@t.TeamName" class=" btn btn-block @(ViewBag.SelectedType == t.TeamName ? "btn-primary" : " btn btn-outline-secondary")">@t.TeamName</a>
        <br />
    }

</div>
